{
  "name": "validatorjs",
  "description": "Validation library inspired by Laravel's Validator",
  "version": "4.0.0",
  "author": "David <dtang859@gmail.com>",
  "contributors": [
    {
      "name": "Gary Green",
      "email": "holegary@gmail.com"
    },
    {
      "name": "Karol Janyst",
      "email": "lapkom@gmail.com"
    }
  ],
  "license": "MIT",
  "main": "./lib/Validator.js",
  "typings": "./lib/Validator.d.ts",
  "browser": "./dist/validatorjs.min.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/skaterdav85/validatorjs"
  },
  "bugs": {
    "url": "https://github.com/skaterdav85/validatorjs/issues?labels=bug&milestone=1&page=1&state=open"
  },
  "keywords": [
    "validatorjs",
    "validator.js",
    "data validation",
    "validator",
    "validate",
    "validation",
    "data",
    "laravel",
    "laravel-validator-for-js"
  ],
  "devDependencies": {
    "awesome-typescript-loader": "^2.2.1",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-es6-promise": "^1.0.0",
    "babel-preset-es2015": "^6.13.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "es6-promise": "^3.2.1",
    "exports-loader": "^0.6.3",
    "glob": "^7.0.5",
    "html-webpack-plugin": "^2.22.0",
    "jsdom": "^9.4.2",
    "jsdom-global": "^2.1.0",
    "mocha": "^3.0.2",
    "path": "^0.12.7",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "source-map-loader": "^0.1.5",
    "ts-babel-node": "^1.0.0",
    "ts-node": "^1.3.0",
    "tsconfig-glob": "^0.4.3",
    "tslint": "^3.15.1",
    "typescript": "^2.0.0-beta",
    "typings": "^1.3.2",
    "uglifyjs": "^2.4.10",
    "webpack": "^2.1.0-beta.20",
    "webpack-dashboard": "^0.1.7",
    "webpack-dev-server": "^2.1.0-beta.0"
  },
  "dependencies": {
    "array-find-index": "^1.0.1",
    "flat": "^2.0.1",
    "object-path": "^0.11.1"
  },
  "scripts": {
    "//": "Deploy",
    "tsconfig": "./node_modules/tsconfig-glob/cli .",
    "prepare": "typings install && npm run tsconfig",
    "start": "webpack-dashboard -- webpack-dev-server --config webpack.dev.conf.js",
    "clean": "npm prune && rm -rf node_modules typings lib dist",
    "lib": "tsc -d",
    "locale": "webpack --config webpack.locale.conf.js",
    "compile": "webpack --config webpack.dist.conf.js && uglifyjs ./dist/validatorjs.js -c -m --screw-ie8 -o ./dist/validatorjs.min.js",
    "dist": "npm run compile && npm run locale",
    "linter": "./node_modules/tslint/bin/tslint src/**/*.ts",
    "test": "npm run linter && ./node_modules/mocha/bin/mocha --opts mocha.opts",
    "//prepublish": "npm run lib && npm run dist"
  }
}
